{
  "importStringConfiguration": {
    "tabSize": 2,
    "maximumNumberOfImportExpressionsPerLine": {
      "count": 120
    }
  },
  "sortConfiguration": {
    "customOrderingRules": {
      "defaultNumberOfEmptyLinesAfterGroup": 0,
      "rules": [
        {
          "type": "importMember",
          "regex": "^$",
          "orderLevel": 5,
          "disableSort": true
        },
        {
          "regex": "^[@]",
          "orderLevel": 10
        },
        {
          "regex": "^[^.@]",
          "orderLevel": 15
        },
        {
          "regex": "^[.]",
          "orderLevel": 30
        }
      ]
    }
  }
}